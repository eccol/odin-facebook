<div class="row">
  <div class="col">
    <h1>Recent Posts</h1>
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-body">
          <div class="card-text">
            <%= post.content %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="col">
    <h1>Your Friends</h1>
    <% @friends.each do |friend| %>
      <div class="friend">
        <%= friend.profile.name %>
      </div>
    <% end %>
  </div>
</div>